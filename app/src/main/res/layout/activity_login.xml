<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/loginbg"
    android:layout_height="match_parent"
    tools:context=".login">
    <LinearLayout
        android:background="@drawable/bgcard"
        android:padding="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tropical Food"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="28sp"/>
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This here add detail about article"
            android:textColor="#393535"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"/>
        <EditText
            android:layout_marginTop="34dp"
            android:hint="E-mail"
            android:paddingLeft="18dp"
            android:background="@drawable/bg_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>
        <EditText
            android:layout_marginTop="14dp"
            android:hint="Password"
            android:paddingLeft="18dp"
            android:background="@drawable/bg_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingStart="18dp" />
        <Button
            android:layout_marginTop="32dp"
            android:background="@drawable/btn_login"
            android:text="@string/sign_in"
            android:textSize="16sp"
            android:textColor="#F8F8F8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You don't have account already?"
                android:textSize="14sp"
                android:textColor="#2E2D2D"
                android:fontFamily="@font/quicksand_book"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:textSize="14dp"
                android:textColor="#000000"
                android:fontFamily="@font/quicksand_book"/>



        </LinearLayout>


    </LinearLayout>

</RelativeLayout>